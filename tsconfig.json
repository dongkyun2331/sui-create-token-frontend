{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/svg": ["./components/svg"],
      "@/components": ["./components"],
      "@/components/*": ["./components/*"],
      "@/context/*": ["./context/*"],
      "@/constants": ["./constants"],
      "@/constants/*": ["./constants/*"],
      "@/lib": ["./lib"],
      "@/lib/*": ["./lib/*"],
      "@/hooks": ["./hooks"],
      "@/hooks/*": ["./hooks/*"],
      "@/utils": ["./utils"],
      "@/utils/*": ["./utils/*"],
      "@/views/*": ["./views/*"],
      "@/styles": ["./styles"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
